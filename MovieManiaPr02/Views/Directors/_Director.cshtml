@model MovieManiaPr02.Models.Director

<form asp-action="@ViewBag.Action" method="post" class="mb-3">


    @if (ViewBag.IsEdit)
    {
        <input type="hidden" asp-for="DirectorId" />
    }

    <div class="mb-3">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-action="Index" asp-controller="Directors" class="btn btn-secondary">Cancel</a>

</form>
