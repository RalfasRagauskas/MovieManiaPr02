<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Titel i browserens faneblad, kan sættes per View -->
    <title>@ViewData["Title"]</title>
</head>
<body>

    <header>
        <!-- Overskrift på siden -->
        <h1>@ViewData["Title"]</h1>

        <!-- Navigation -->
        <nav>
            <a href="@Url.Action("Index", "Home")">Home</a> |
            <a href="@Url.Action("Index", "Movies")">Movies</a>
        </nav>
    </header>

    <main>
        <!-- Her indsætter hvert Views indhold -->
        @RenderBody()
    </main>

</body>
</html>
